<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authors</title>
</head>

<body>
    <nav>
        <ul>
            <li><a href="/authors/new"> Create Authors</a> </li>
            <li><a href="/books">Books</a> </li>
        </ul>
    </nav>
    <section>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Is Alive</th>
                    <th>Books</th>
                    <th>Actions</th>
                </tr>
            <tbody>
                <% for (const author of authors){ %>
                    <tr>
                        <td><a href="/authors/<%= author._id %>"><%= author.name %></a>
                            
                        </td>
                        <td>
                            <%= author.age %>
                        </td>
                        <td>
                            <%= author.isAlive %>
                        </td>
                        <td>
                            <ul>
                                <% for (const book of author.books) { %>
                                    <li>
                                        <%= book.title %>
                                    </li>
                                    <% } %>
                            </ul>
                        </td>
                        <td>future actions</td>
                    </tr>
                    <% } %>
            </tbody>
            </thead>
        </table>
    </section>
</body>

</html>